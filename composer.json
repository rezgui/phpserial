{
    "name": "rezgui/php-serial",
    "description": "Multi-platform serial port access convenience class for Laravel",
    "keywords": [
        "laravel",
        "rezgui",
        "rsolution-dz",
        "php-serial"
    ],
    "homepage": "https://github.com/rezgui/php-serial",
    "license": "MIT",
    "type": "library",
    "authors": [{
        "name": "Yacine REZGUI",
        "email": "yacine.rezgui@rsolution.dz",
        "role": "Developer"
    }],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Rezgui\\PhpSerial\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rezgui\\PhpSerial\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rezgui\\PhpSerial\\PhpSerialServiceProvider"
            ],
            "aliases": {
                "PhpSerial": "Rezgui\\PhpSerial\\PhpSerialFacade"
            }
        }
    }
}